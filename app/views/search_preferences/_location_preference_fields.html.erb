<div class="nested-fields bg-gray-50 p-4 rounded">
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div>
      <%= f.label :city, "City", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :city, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= f.label :state, "State/Province", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :state, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= f.label :country, "Country", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :country, class: "w-full p-2 border rounded" %>
    </div>
    <div>
      <%= f.label :priority, "Priority", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :priority, min: 1, class: "w-full p-2 border rounded" %>
    </div>
  </div>
  <div class="mt-2 text-right">
    <%= link_to_remove_association "Remove", f, class: "text-red-600 hover:underline" %>
  </div>
</div>